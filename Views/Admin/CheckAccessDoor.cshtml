@model WebApplicationASP.Models.AccessDoorViewModelList
@{


}


<div class="card">
	<div class="card-header bg-primary">
		<div class="card-title">
			<span>ค้นหาการ เข้า-ออก บริษัท</span>
		</div>



	</div>
	<div class="card-body">


		<div class="row justify-content-center">
			<div class="col-3">
				<form asp-action="CheckAccessDoor" method="post">
					<div class="form-group">
						<label for="empCode">รหัสพนักงาน</label>
						<input type="text" class="form-control" asp-for="EmployeeCode" />

					</div>
					<div align="center">
						<button class="btn btn-primary" type="submit"><i class="fa fa-search"> ค้นหา</i></button>
					</div>

				</form>
			</div>

		</div>


	</div>
</div>

@if (Model.accessDoorModels.Count > 0)
{

	<div class="card">

		<div class="card-header bg-primary">
			<div class="card-title">
				<div class="row">


					 <div class="col">

						<img src="@ViewBag.urlImg" class="img-thumbnail" alt="Cinque Terre" width="100" height="100">
					</div>
					 	<div class="col-8">
						<div>
							<span>ชื่อ-นามสกุล @Model.accessDoorModels[0].name</span>
						</div>

						<div>
							<span>รหัสพนักงาน @Model.accessDoorModels[0].employee_code</span>
						</div>


					</div>  
				</div>
			</div>

		</div>

		<div class="card-body">


			<table class="table table-sm table-hover"  id="example1">

				<thead class="thead-dark">
					<tr>
						<th>
							<span>ชื่อ </span>
						</th>

						<th>
							รหัสพนักงาน
						</th>

						<th>
							เวลาแสกนบัตร
						</th>

						<th>
							ชื่อเครื่องรูดบัตร
						</th>

						<th>
							สถานะ
						</th>




					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.accessDoorModels)
					{


						<tr>

							<td>
								@Html.DisplayFor(modelItem => item.name)
							</td>

							<td>
								@Html.DisplayFor(modelItem => item.employee_code)
							</td>

							<td>
								@Html.DisplayFor(modelItem => item.Time_stamp)
							</td>

							<td>
								@Html.DisplayFor(modelItem => item.machin_name)
							</td>

							<td>
								@Html.DisplayFor(modelItem => item.machin_status)
							</td>




							@*  <td>
					<a class="btn btn-warning" asp-controller="Leaving" asp-action="PDF" asp-route-id="@item.ABSENCE_DOCUMENT">PDF</a>
					</td>   *@
						</tr>
					}
				</tbody>
			</table>

		</div>
	</div>
}